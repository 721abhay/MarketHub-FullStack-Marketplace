# MarketHub API Configuration

# Port to run the server on
PORT=3000

# MongoDB Connection String
DB=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/markethub?retryWrites=true&w=majority

# JWT Secret Key for Authentication
JWT_SECRET=your_super_secret_key_here

# Google Client ID for Social Login
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# AWS S3 Configuration (Optional/Legacy)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name

# Supabase Configuration (Primary)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# Azure Deployment (Student Pack)
AZURE_APP_NAME=markethub-api
AZURE_COSMOS_CONNECTION_STRING=optional-if-using-azure-db

# Firebase Configuration (Social Auth)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Optional: Environment (development, production)
NODE_ENV=development
